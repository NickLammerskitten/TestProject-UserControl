<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication1.Views.MyWindow"
        Title="MyWindow"
        SizeToContent="WidthAndHeight">
        <Grid RowDefinitions="Auto, Auto">
                <Label Grid.Row="0">Sie sind gerade dabei, einen Artikel zu löschen. Bestätigen Sie diesen Vorgang bitte mit ok.</Label>
                <Grid Grid.Row="1" ColumnDefinitions="*, *">
                        <Button Grid.Column="0" Click="Button_OnClick_Ok" HorizontalAlignment="Right">Ok</Button>
                        <Button Grid.Column="1" Click="Button_OnClick_Cancel" HorizontalAlignment="Left">Cancel</Button>
                </Grid>
        </Grid>
</Window>
